@{
}

<style>
    body {
        height: 100vh;
        background: linear-gradient(to right, white 30%, darkcyan 50%);
        margin: 0;
    }
</style>

<div class="container-fluid" style="margin-top: 7%; padding: 0;">
    <div class="row no-gutters">

        <div class="col-md-6" style="background-color: white; padding: 0; margin-left:150px">
            <div style="text-align: center; height: 50%;">
                <img src="~/css/Bhagvatgita.png" alt="Login Image" class="img-fluid" style="max-width: 100%; height: 70vh; object-fit: cover;" />
            </div>
        </div>


        <div class="col-md-6" style=" padding: 5%; border: 5px solid white; color:white; width:30%">
            <h1 style="text-align: center; color: white; -webkit-text-stroke: 3px black;">
                <b>REGISTRATION</b>
            </h1>



            <form asp-action="RegiUsers" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Username</label>
                    <input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="UserName" class=""></span>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="Email" class=""></span>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="Password" class=""></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">SignUp</button><br /><br />
               
            </form>
        </div>

    </div>
</div>