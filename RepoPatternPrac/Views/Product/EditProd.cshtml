@model Products
@{
    ViewData["Title"] = "EditProd";
}

<h1>EditProd</h1>
<form asp-action="EditProd" method="post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Id</label>
        <input type="text" asp-for="Id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Id" class=""></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Name" class=""></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Manufacturing Country</label>
        <input type="text" asp-for="PManuFacCountry" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="PManuFacCountry" class=""></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Price</label>
        <input type="text" asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Price" class=""></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}

