@model RepoPatternPrac.Models.LoginDetails

@{
    // Add any necessary view-specific logic here
}

@if (TempData["Errormsg"] != null)
{
    <div class="alert alert-danger">
        @TempData["Errormsg"]
    </div>
}
@if (TempData["Errormsg1"] != null)
{
    <div class="alert alert-danger">
        @TempData["Errormsg1"]
    </div>
}

@if (TempData["Successmsg"] != null)
{
    <div class="alert alert-success">
        @TempData["Successmsg"]
    </div>
}

<style>
    body{
        height: 100vh; 
        background: linear-gradient(to right, white 30%, darkcyan 50%);
        margin: 0;
    }
</style>
<!-- Main container with background for form and image -->
<div class="container-fluid" style="margin-top: 7%; padding: 0;">
    <div class="row no-gutters">
        <!-- Left side: Image section --> 
        <div class="col-md-6" style="background-color: white; padding: 0; margin-left:150px">
            <div style="text-align: center; height: 50%;">
                <img src="~/css/Bhagvatgita.png" alt="Login Image" class="img-fluid" style="max-width: 100%; height: 70vh; object-fit: cover;" />
            </div>
        </div>

        <!-- Right side: Login form section -->
        <div class="col-md-6" style=" padding: 5%; border: 5px solid white; color:white; width:30%">
            <h1 style="text-align: center; color:white;  -webkit-text-stroke: 3px black;"><b>LOGIN</b></h1>

            <form asp-action="Logi" method="post">
                <div class="mb-3" >
                    <label for="exampleInputEmail1" class="form-label">Username/Email</label>
                    <input type="text" asp-for="UsernameOrEmail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="UsernameOrEmail" class=""></span>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="Password" class=""></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button><br /><br />
                <a asp-action="RegiUsers" asp-controller="Account" style="width: 100%; color:white" class="btn btn-warning">SignUp</a>
            </form>
        </div>

    </div>
</div>
